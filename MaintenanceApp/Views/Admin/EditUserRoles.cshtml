@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@model EditUserRolesViewModel

<h2>Manage Roles for @Model.Email</h2>

<form asp-action="UpdateUserRoles" asp-controller="Admin" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        <label>Roles:</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="selectedRoles" value="@role" class="form-check-input"
                @(Model.AssignedRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("UsersList", "Admin")" class="btn btn-secondary">Back</a>
</form>
